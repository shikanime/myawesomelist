{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "templ: watch",
            "type": "shell",
            "command": "templ",
            "args": [
                "generate",
                "--watch",
                "--proxy=http://localhost:8080",
                "--open-browser=false"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "tailwind: watch",
            "type": "shell",
            "command": "npx",
            "args": [
                "tailwindcss",
                "-i", "${workspaceFolder}/cmd/myawesomelist/app/assets/app.css",
                "-o", "${workspaceFolder}/cmd/myawesomelist/app/public/styles.css",
                "--minify",
                "--watch"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}